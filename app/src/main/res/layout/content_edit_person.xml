<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.alan.andy.gamerecord.EditPersonActivity"
    tools:showIn="@layout/activity_edit_person">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/button_today"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:background="@android:color/holo_orange_dark"
            android:contentDescription="@string/text_today"
            app:srcCompat="@drawable/today" />

        <EditText
            android:id="@+id/editText_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date"
            android:textSize="20sp"
            android:hint="@string/text_time"
            android:autofillHints="@string/text_time" tools:targetApi="o" />

        <EditText
            android:id="@+id/editText_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp"
            android:hint="@string/text_name"
            android:autofillHints="@string/text_name" tools:targetApi="o" />

        <EditText
            android:id="@+id/editText_Balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned|numberDecimal"
            android:textSize="20sp"
            android:hint="@string/text_balance"
            android:autofillHints="@string/text_balance" tools:targetApi="o" />

        <EditText
            android:id="@+id/editText_Comments"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1024"
            android:inputType="textMultiLine"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="20sp"
            android:hint="@string/text_comments"
            android:autofillHints="@string/text_comments" tools:targetApi="o"/>
    </LinearLayout >

</android.support.constraint.ConstraintLayout>
